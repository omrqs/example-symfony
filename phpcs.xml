<?xml version="1.0"?>
<ruleset name="Application">
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="45"/>
    <arg name="cache" value=".phpcs-cache"/>
    <arg name="colors"/>
    <arg name="ignore" value="server.php,resources/views" />

    <file>bin/</file>
    <file>config/</file>
    <file>public/</file>
    <file>src/</file>
    <file>tests/</file>

    <!-- Ignore warnings and show progress of the run -->
    <arg value="nps"/>

    <rule ref="PSR2"/>
</ruleset>
